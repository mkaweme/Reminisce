generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id          Int          @id @default(autoincrement())
  firstName   String
  lastName    String
  phoneNumber String
  latitude    Float?
  longitude   Float?
  delivery    Boolean
  totalAmount Float
  orderID     String
  createdAt   DateTime     @default(now())
  items       CanvasItem[]
}

model CanvasItem {
  id         String   @id
  imageUrls  String[] // Store image URLs (max 10 images)
  name       String
  price      Float
  quantity   Int
  size       String
  totalPrice Float
  type       String
  orderId    Int
  order      Order    @relation(fields: [orderId], references: [id])
}
